<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Osma.Mobile.App.Views.Connections.TextInvitePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="JSON Invite"
                   FontSize="Large"
                   HorizontalOptions="Center"
                   MinimumHeightRequest="30"
                   Margin="5, 5, 5, 0"/>
            <Entry Keyboard="Text"
                   Text="{Binding InputText}"
                   Placeholder="Paste copied QR-Code"
                   VerticalOptions="Start"
                   ReturnCommand="{Binding InputTextCommand}" />
            <Label
                Text="{Binding Json}"
                VerticalOptions="StartAndExpand"
                HorizontalOptions="StartAndExpand"
                FontSize="Small"
                TextColor="DarkBlue"
                Margin="10, 10, 10, 10"
            />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>