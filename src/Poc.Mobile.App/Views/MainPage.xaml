<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:connections="clr-namespace:Poc.Mobile.App.Views.Connections;assembly=Poc.Mobile.App"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             x:Class="Poc.Mobile.App.Views.MainPage"
            >
    <NavigationPage
        Title="Connections"
        Icon="connection_icon.png"
        ios:NavigationPage.PrefersLargeTitles="true"
    >
        <x:Arguments>
            <connections:ConnectionsPage BindingContext="{Binding Connections}"/>
        </x:Arguments>
    </NavigationPage>
</TabbedPage>