<?xml version="1.0" encoding="UTF-8"?>
<ContentView BackgroundColor="Transparent" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Poc.Mobile.App.Views.Connections.ActionableItemView">
    <ContentView.Content>
         <StackLayout Padding="16">
            <Label Text="{Binding Datetime}" FontSize="Micro"/>
            <Label Text="{Binding Title}" FontSize="Small"/>
            <Label Text="{Binding Subtitle}" FontSize="Micro" />
            <StackLayout Orientation="Horizontal">
                <Button
                    Text="View"
                    HorizontalOptions="Start"
                    Style="{StaticResource ButtonStylePrimary}"
                />
                <Button
                    Text="Ignore"
                    HorizontalOptions="Start"
                    Style="{StaticResource ButtonStyleSecondary}"
                />
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>